<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PokemonDetailsActivity">
    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        app:cardCornerRadius="4dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/pokemon_details_image"
                android:layout_marginTop="-50dp"
                android:layout_width="200dp"
                android:background="@color/purple_500"
                android:layout_height="200dp" />
            <TextView
                android:layout_gravity="center_horizontal"
                android:id="@+id/pokemon_details_name"
                android:layout_marginTop="20dp"
                android:textSize="46dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pokeman"/>
            <TextView
                android:layout_gravity="center_horizontal"
                android:id="@+id/pokemon_details_height"
                android:layout_marginTop="20dp"
                android:textSize="16dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="height"/>
            <TextView
                android:layout_gravity="center_horizontal"
                android:id="@+id/pokemon_details_weight"
                android:layout_marginTop="20dp"
                android:textSize="16dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="weight"/>
            <TextView
                android:layout_gravity="center_horizontal"
                android:id="@+id/pokemon_details_abilities"
                android:layout_marginTop="20dp"
                android:textSize="16dp"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Abilities"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/pokemon_details_recyclerview_abilities"
                android:layout_width="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center_horizontal"
                android:layout_height="40dp" />
            <TextView
                android:layout_gravity="center_horizontal"
                android:id="@+id/pokemon_details_weakness"
                android:layout_marginTop="20dp"
                android:textSize="16dp"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Move"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/pokemon_details_recyclerview_move"
                android:layout_width="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center_horizontal"
                android:layout_height="40dp" />
            <TextView
                android:layout_gravity="center_horizontal"
                android:id="@+id/pokemon_details_stats"
                android:layout_marginTop="20dp"
                android:textSize="16dp"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stats"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/pokemon_details_recyclerview_stats"
                android:layout_width="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center_horizontal"
                android:layout_height="40dp" />


        </LinearLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>